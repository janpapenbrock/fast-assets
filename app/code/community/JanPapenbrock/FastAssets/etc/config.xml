<?xml version="1.0"?>
<config>
    <modules>
        <JanPapenbrock_FastAssets>
            <version>0.1.0</version>
        </JanPapenbrock_FastAssets>
    </modules>
    <global>
        <helpers>
            <fast_assets>
                <class>JanPapenbrock_FastAssets_Helper</class>
            </fast_assets>
        </helpers>
        <models>
            <fast_assets>
                <class>JanPapenbrock_FastAssets_Model</class>
            </fast_assets>
        </models>
    </global>
    <frontend>
        <events>
            <controller_action_layout_generate_blocks_after>
                <observers>
                    <fast_assets>
                        <class>fast_assets/observer</class>
                        <type>singleton</type>
                        <method>onLayoutReady</method>
                    </fast_assets>
                </observers>
            </controller_action_layout_generate_blocks_after>
        </events>
    </frontend>
    <default>
        <dev>
            <fast_assets>
                <enabled>0</enabled>
                <css_enabled>0</css_enabled>
                <js_enabled>0</js_enabled>
                <compile_asynchronously>0</compile_asynchronously>
                <store_files_in_skin_top_level>0</store_files_in_skin_top_level>
            </fast_assets>
        </dev>
    </default>
    <crontab>
        <jobs>
            <fast_assets_compile>
                <schedule><cron_expr>*/2 * * * *</cron_expr></schedule>
                <run><model>fast_assets/observer::onCronCompile</model></run>
            </fast_assets_compile>
        </jobs>
    </crontab>
</config>
